{% extends 'ItesACControlBundle::layout.html.twig' %}
{% block cuerpo %}
{% for entity in edificios %}
<div class="col-sm-6 col-md-4 col-lg-4">
  <div class="thumbnail">
      <a href="#" class="btn btn-primary btn-block" role="button"><h1>Edificio {{ entity.nombre }}</h1></a>
    <div class="caption">
      <h3>Detalles</h3>
      <p>AC encendidos: {{ badge('0') }}</p>
      <p>AC apagados: {{ badge('0') }}</p>
      <div class="btn-group btn-group-justified">
          <a href="#" class="btn btn-danger" role="button">{{ icon('off') }} OFF ALL</a> <a href="#" class="btn btn-success" role="button">ON ALL</a>
      </div>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}