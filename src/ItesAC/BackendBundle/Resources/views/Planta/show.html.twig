{% extends 'ItesACBackendBundle::layout.html.twig' %}
{% block encabezado %}Planta{% endblock %}
{% block cuerpo %}
<div class="table-responsive">
    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ entity.imageName }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row record_actions">
    <div class="btn-group col-xs-8 col-sm-8 col-md-8">
            <a href="{{ path('planta') }}" class="btn btn-default" role="button">
                Back to the list
            </a>
            <a href="{{ path('planta_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">
                Edit
            </a>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4">
            {{ form(delete_form) }}
    </div>
</div>
{% endblock %}
