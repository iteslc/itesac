{% extends 'ItesACBackendBundle::layout.html.twig' %}
{% block encabezado %}Listado de aires acondicionados{% endblock %}
{% block cuerpo %}
    <div class="table-responsive">
    <table class="records_list table">
        <thead>
            <tr>
                <th>Modelo</th>
                <th>IP Arduino</th>
                <th>Pin</th>
                <th>Edificio</th>
                <th>Planta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('modelo_show', { 'id': entity.modelo.id }) }}">{{ entity.modelo.nombre }}</a></td>
                <td><a href="{{ path('arduino_show', { 'id': entity.arduino.id }) }}">{{ entity.arduino.ip }}</a></td>
                <td>{{ entity.pin }}</td>
                <td><a href="{{ path('edificio_show', { 'id': entity.edificio.id }) }}">{{ entity.edificio.nombre }}</a></td>
                <td><a href="{{ path('planta_show', { 'id': entity.planta.id }) }}">{{ entity.planta.nombre }}</a></td>
                <td>
                    <div class="btn-group hidden-xs">
                        <a href="{{ path('ac_show', { 'id': entity.id }) }}" class="btn btn-default" role="button">show</a>
                        <a href="{{ path('ac_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">edit</a>
                    </div>
                    <div class="btn-group-vertical visible-xs">
                        <a href="{{ path('ac_show', { 'id': entity.id }) }}" class="btn btn-default" role="button">show</a>
                        <a href="{{ path('ac_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="pull-right">
        <a href="{{ path('ac_new') }}" class="btn btn-primary" role="button">
            Create a new entry
        </a>
    </div>
{% endblock %}