{% extends 'ItesACBackendBundle::layout.html.twig' %}
{% block style %}
{{ parent() }}
<style>
.modal-header {
background: #428bca;
}
</style>
{% endblock %}
{% block encabezado %}Crear Aire Acondicionado{% endblock %}
{% block cuerpo %}
<div class="col-xs-12 col-sm-6 col-md-6" style="padding-bottom:15px;">
    {{ form(form) }}
</div>
<div class="row record_actions" style="padding:25px;">
    <div class="btn-group col-xs-12 col-sm-6 col-md-6">
	<a href="{{ path('ac') }}" class="btn btn-default" role="button">
	    Back to the list
	</a>
        <a href="ac" data-toggle="modal" data-target="#ac" class="btn btn-success" role="button">Posici√≥n AC</a>
    </div>
</div>
{% endblock %}
{% block modal %}
<div class="modal fade" id="ac" tabindex="-1" role="dialog" aria-labelledby="labelac" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="labelac" style="color:white;">Posicion AC</h4>
      </div>
      <div class="modal-body">
        <div id="ac_position" style="border: 2px solid black;width:100%; position: relative; margin: auto;"> 
            <img class= "img-responsive"  src="/Geekly%20Development%20House/ItesAC/web/{{vich_uploader_asset(entity.planta, 'image')}}">
            <img style="width:3.8%; height:3.3%;position: absolute;" src="{{ asset('/bundles/itesacbackend/images/ac_vector.png') | 
                                imagine_filter('mini_ac') }}" 
            id="actarget">
        </div>
      </div>
        <div class="modal-footer">
           <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
        </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
     {{ parent() }}
     {% javascripts 
        '@ItesACBackendBundle/Resources/public/js/dependedSelect.js' 
        '@ItesACBackendBundle/Resources/public/js/ACPosition.js'
        '@ItesACBackendBundle/Resources/public/js/dependedImage.js' %}
         <script type="text/javascript" src="{{ asset_url }}"></script>
     {% endjavascripts %}
 {% endblock %}