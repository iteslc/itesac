{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AireAcondicionado</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pin</th>
                <td>{{ entity.pin }}</td>
            </tr>
            <tr>
                <th>Posicionx</th>
                <td>{{ entity.posicionX }}</td>
            </tr>
            <tr>
                <th>Posiciony</th>
                <td>{{ entity.posicionY }}</td>
            </tr>
        </tbody>
    </table>
        <div id="ac_position" 
             style="border: 2px solid black; width: 900px; height: 400px; background-size: cover; background-image: url('/Geekly%20Development%20House/ItesAC/web/{{vich_uploader_asset(entity.planta, 'image')}}'); ">
            <img style="position: relative;left:{{entity.posicionX}}px;top:{{entity.posicionY}}px;"
            src="{{ asset('/bundles/itesacbackend/images/ac_vector.png') | imagine_filter('mini_ac') }}"/>
        </div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ac') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('ac_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
